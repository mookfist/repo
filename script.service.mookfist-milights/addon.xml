<addon id="script.service.mookfist-milights" version="0.2.0~beta12" name="Mookfist Milights" provider-name="Mookfist">
  <requires>
    <import addon="xbmc.python" version="2.25.0" />
    <import addon="script.module.python-simplejson" version="2.14.0" />
    <import addon="script.module.python-mookfist-lled-controller" version="0.1.5"/>
    <import addon="script.module.mooked-colorpicker" version="1.0.14" />
    <import addon="script.context-menu.mookfist-milights" version="0.2.0~beta1" />
    <import addon="script.module.kodi-six"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="login" />
  <extension point="xbmc.python.script" library="cmd.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Mookfist Milights</summary>
    <description lang="en">Controls the wifi bridge of Limitless LED-compatible products, such as Milights, LimitlessLED, Easybulb, AppLamp, iLight.[CR][CR]Please ensure that your wifi bridge is properly configured, and that your lights are synced to your bridge properly.[CR][CR]Supports bridge versions 4, 5 and 6. This plugin can only control one bridge at a time.</description>
    <disclaimer lang="en">May contain soy products</disclaimer>
