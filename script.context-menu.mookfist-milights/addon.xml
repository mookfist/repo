<?xml version="1.0" encoding="utf-8"?>
<addon id="script.context-menu.mookfist-milights" version="0.2.0devel" name="Mookfist Milights Context Menu" provider-name="Mookfist">
  <requires>
    <import addon="xbmc.python" version="2.23.0" />
  </requires>
  <extension point="kodi.context.item">
    <menu id="kodi.core.main">
      <item library="contextitem.py">
        <label>30000</label>
        <visible>true</visible>
      </item>
    </menu>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Mookfist Milights Context Menu</summary>
    <description lang="en">Adds a context menu item to dim lights before playing something.</description>
	  <disclaimer lang="en">Not suitable for low sodium diets</disclaimer>
	  <language>en</language>
    <platform>all</platform>
    <license>MIT</license>
    <source>https://github.com/mookfist/repo/tree/master/script.context-menu.mookfist-milights</source>
    <email>mookfist@gmail.com</email>
    <website>https://github.com/mookfist/repo</website>
  </extension>
</addon>
